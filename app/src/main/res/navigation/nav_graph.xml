<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main_graph"
    app:startDestination="@id/locationFragment">
  <fragment
      android:id="@+id/locationFragment"
      android:name="de.kfzteile24.app.presentation.location.LocationFragment"
      android:label="LocationFragment" >
    <action
        android:id="@+id/action_locationFragment_to_detailFragment"
        app:destination="@id/detailFragment" />
  </fragment>
  <fragment
      android:id="@+id/detailFragment"
      android:name="de.kfzteile24.app.presentation.detail.DetailFragment"
      android:label="detail_fragment"
      tools:layout="@layout/detail_fragment" >
    <action
        android:id="@+id/action_detailFragment_to_locationFragment"
        app:destination="@id/locationFragment" />
  </fragment>
</navigation>